<%= form_for [@group, @student, @grade] do |f| %>

  <%= f.label :remark %>
  <%= f.text_field :remark %>

  <%= f.radio_button :value, '2', :checked => true %>
  <%= label :value, 'Green' %>
  <%= f.radio_button :value, '1' %>
  <%= label :value, 'Yellow' %>
  <%= f.radio_button :value, '0' %>
  <%= label :value, 'Red' %>


  <%= f.label :date %>
  <%= f.date_select :date %>

  <%= f.submit %>

<% end %>
