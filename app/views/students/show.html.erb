<h1>Student</h1>




<%= @student.name%>
<% canEval=true %>
<p> <% @grades.each do |grade| %></p>

<%if grade.created_at.to_date == Date.today && grade.user_id == current_user.id %>
  <% canEval=false %>
<%end%>
<%= link_to grade.value, group_student_grade_path(@group.id, @student.id, grade.id) %>


<%end%>

<%if canEval %>
<%= render 'shared/addingEditingGrades' %>
<%end%>
